[global]
ipsec saref = yes
saref refinfo = 30

;debug avp = yes
;debug network = yes
;debug state = yes
;debug tunnel = yes

[lns default]
ip range = {{  lns_ip_range }}
local ip = {{  lns_local_ip }}
refuse pap = yes
require authentication = no
;ppp debug = yes
pppoptfile = /etc/ppp/options.xl2tpd
length bit = yes

